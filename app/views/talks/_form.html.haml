= simple_form_for(@talk) do |f|
  = f.error_notification

  .form-inputs
    = f.input :scheduled_for, as: :date
    = f.input :confirmed
    = f.input :title
    = f.input :speaker_name
    = f.input :speaker_email
    = f.input :speaker_job_title
    = f.input :speaker_company
    = f.input :notes
    = f.input :slides_url
    = f.input :speaker_twitter, label: "Twitter"
    = f.input :speaker_facebook, label: "Facebook"
    = f.input :speaker_linkedin, label: "LinkedIn"
    = f.input :speaker_googleplus, label: "Google+"

  .form-actions
    = f.button :submit
